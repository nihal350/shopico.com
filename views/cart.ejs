<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no">
  <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@4.6.2/dist/css/bootstrap.min.css">
  <script src="https://cdn.jsdelivr.net/npm/jquery@3.6.4/dist/jquery.slim.min.js"></script>
  <script src="https://cdn.jsdelivr.net/npm/popper.js@1.16.1/dist/umd/popper.min.js"></script>
  <script src="https://cdn.jsdelivr.net/npm/bootstrap@4.6.2/dist/js/bootstrap.bundle.min.js"></script>
  <title>Cart</title>
  <style>
    .footer{
      background: linear-gradient(to right, #ee7724, #d8363a, #dd3675, #b44593);
      color:#fff!important ;
      height: 200px;
      width: 100%;
      margin-top: 100px;
    }
  </style>
</head>
<body>
  <nav class="navbar navbar-expand-lg navbar-dark" style="background: linear-gradient(to right, #ee7724, #d8363a, #dd3675, #b44593);padding-left: 5%;padding-right: 5%;">
    <a class="navbar-brand" href="#">
      <img src="data:image/png;base64," style="width: 65px; border-radius: 10px;" alt="logo">
      <strong class="ml-2">Shopico.com</strong>
    </a>
    <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarNav" aria-controls="navbarNav" aria-expanded="false" aria-label="Toggle navigation">
      <span class="navbar-toggler-icon"></span>
    </button>
    <div class="collapse navbar-collapse" id="navbarNav">
      <ul class="navbar-nav text-right">
        <li class="nav-item  ">
          <a class="nav-link" href="/">Home</a>
        </li>
        <li class="nav-item active">
          <a class="nav-link" href="/cart">View Cart
          </a>
        </li>
      </ul>
      <ul class="navbar-nav text-right ml-auto">
        <li class="nav-item">
          <a class="nav-link" href="/logout">Logout</a>
        </li>
      </ul>
    </div>
  </nav>
  <div class="container mt-5 table-responsive">
    <% if (cart && cart.products.length > 0) { %>
      <h2>Your Cart</h2>
      <table class="table">
        <thead>
          <tr>
            <th scope="col">image</th>
            <th scope="col">Product Name</th>
            <th scope="col">Quantity</th>
            <th scope="col">Price</th>
            <th scope="col">Total</th>
            <th scope="col">Actions</th>
          </tr>
        </thead>
        <tbody>
          <% let total = 0 %>
          <% cart.products.forEach(item => { %>
            <% let product = item.productId %>
            <% let subtotal = product.price * item.quantity %>
            <% total += subtotal %>
            <tr>
              <td><img  style='width:50px' src="<%= product.image %>" alt=""></td>
              <td><%= product.name %></td>
              <td style="width: 15px;">
                <form   action="/cart/update/<%= product._id %>" method="POST" class="form-inline ">
                  <input  type="number" name="quantity" value="<%= item.quantity %>" min="0" class="form-control mr-2" onchange="updateQuantity('<%= product._id %>', this.value)">
                </form>
              </td>
              <td>₹<%= product.price %></td>
              <td>₹<%= subtotal %></td>
              <td>
                <form action="/cart/remove/<%= product._id %>" method="POST">
                  <button type="submit" class="btn btn-danger btn-sm">Remove</button>
                </form>
              </td>
            </tr>
          <% }) %>
        </tbody>
        <tfoot>
          <tr>
            <th colspan="3" class="text-right">Total:</th>
            <th>₹<%= total %></th>
            <th></th>
          </tr>
        </tfoot>
      </table>
    <% } else { %>
      <h2>Your Cart is Empty</h2>
    <% } %>
  </div>
    
  <div class="footer"></div>


