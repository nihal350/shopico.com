<!-- views/home.ejs -->


<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no">
  <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@4.6.2/dist/css/bootstrap.min.css">
  <script src="https://cdn.jsdelivr.net/npm/jquery@3.6.4/dist/jquery.slim.min.js"></script>
  <script src="https://cdn.jsdelivr.net/npm/popper.js@1.16.1/dist/umd/popper.min.js"></script>
  <script src="https://cdn.jsdelivr.net/npm/bootstrap@4.6.2/dist/js/bootstrap.bundle.min.js"></script>
  <title>Home</title>
  <style>
    .footer{
      background: linear-gradient(to right, #ee7724, #d8363a, #dd3675, #b44593);
      color:#fff!important ;
      height: 200px;
      width: 100%;
      margin-top: 100px;
    }
    #successMessage{
      transition: all 0.2s ease-in-out;
      display :none;
      z-index: 50;
      position: fixed;
      bottom:18%;
      width: 100%;
    }
    .cards{
      border-radius: 10px;
      box-shadow: 0 3px 6px rgba(67, 67, 67, 0.16), 0 3px 6px rgba(56, 56, 56, 0.23);
}

.cards:hover {
  box-shadow: 0 4px 10px rgba(0,0,0,0.16), 0 4px 10px rgba(0,0,0,0.23);
}
.dot {
  position: relative;
  top: -5px;
  width: 8px;
  height: 8px;
  background-color: white;
  border-radius: 50%;
  display: inline-block;
}
  </style>
</head>
<body>
  <nav class="navbar navbar-expand-lg navbar-dark" style="background: linear-gradient(to right, #ee7724, #d8363a, #dd3675, #b44593);padding-left: 5%;padding-right: 5%;">
    <a class="navbar-brand" href="#">
      <img src="data:image/png;base64," style="width: 65px; border-radius: 10px;" alt="logo">
      <strong class="ml-2">Shopico.com</strong>
    </a>
    <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarNav" aria-controls="navbarNav" aria-expanded="false" aria-label="Toggle navigation">
      <span class="navbar-toggler-icon"></span>
    </button>
    <div class="collapse navbar-collapse" id="navbarNav">
      <ul class="navbar-nav text-right">
        <li class="nav-item active ">
          <a class="nav-link" href="/">Home</a>
        </li>
        <li class="nav-item ">
          <a class="nav-link" href="/cart">View Cart
          </a>
        </li>
      </ul>
      <ul class="navbar-nav text-right ml-auto">
        <li class="nav-item">
          <a class="nav-link" href="/logout">Logout</a>
        </li>
      </ul>
    </div>
  </nav>

  <div id="successMessage" class="alert alert-success text-center" style="display: none;">
    Item added to cart!
  </div>
  

  <div class="container mt-5">
    <h2>Welcome <%= username %></h2>
    <div class="row justify-content-center">
      <% products.forEach(product => { %>
        <div class="col-12 col-sm-6 col-lg-4 mb-4">
          <div class="card cards">
            <img src="<%= product.image %>" class="card-img-top" alt="Product Image" style="height: 200px;border-top-right-radius: 10px;border-top-left-radius: 10px;">
            <div class="card-body">
              <h5 class="card-title"><%= product.name %></h5>
              <p class="card-text">â‚¹<%= product.price %></p>
              <button type="button" onclick="addToCart('<%= product._id %>')" class="btn text-light btn-outline-light float-right"
        style="background: linear-gradient(to right, #ee7724, #d8363a, #dd3675, #b44593);">Add to Cart</button>
            </div>
          </div>
        </div>
      <% }) %>
    </div>
  </div>
  <div class="footer"></div>
  <script>
    function addToCart(productId) {
      // Send an AJAX request to add the item to the cart
      fetch(`/cart/add/${productId}`, {
        method: 'POST',
        headers: {
          'Content-Type': 'application/json',
        },
        body: JSON.stringify({}),
      })
        // Show the success message for 2 seconds
        const successMessage = document.getElementById('successMessage');
        successMessage.style.display = 'block';
        setTimeout(() => {
          successMessage.style.display = 'none';
        }, 2000);
    }
  </script>
</body>
</html>
